<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ConverterController"
            style="-fx-background-color: #fafafa;">

    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: #1f2933; -fx-padding: 16;">
            <Label text="XML ⇄ JSON Converter" textFill="#f9fafb">
                <font>
                    <Font name="Segoe UI Semibold" size="22"/>
                </font>
            </Label>
            <Label text="Bidirectional XML / JSON conversion (from scratch)"
                   textFill="#d1d5db"
                   style="-fx-padding: 4 0 0 0; -fx-font-size: 13px;"/>
        </VBox>
    </top>

    <!-- Main content -->
    <center>
        <VBox spacing="16" style="-fx-padding: 20;">

            <!-- Buttons -->
            <HBox spacing="10"
                alignment="CENTER_LEFT"
                style="-fx-padding: 10 20;">

              <Button fx:id="loadXmlButton" text="Load XML"
                      onAction="#handleLoadXml"
                      style="-fx-background-color: #2563eb;
                             -fx-text-fill: white;
                             -fx-min-height: 36;"/>

              <Button fx:id="loadJsonButton" text="Load JSON"
                      onAction="#handleLoadJson"
                      style="-fx-background-color: #7c3aed;
                             -fx-text-fill: white;
                             -fx-min-height: 36;"/>

              <Button fx:id="xmlToJsonButton" text="XML → JSON"
                      onAction="#handleXmlToJson"
                      style="-fx-background-color: #059669;
                             -fx-text-fill: white;
                             -fx-min-height: 36;"/>

              <Button fx:id="jsonToXmlButton" text="JSON → XML"
                      onAction="#handleJsonToXml"
                      style="-fx-background-color: #dc2626;
                             -fx-text-fill: white;
                             -fx-min-height: 36;"/>

              <Button fx:id="saveButton" text="Save"
                      onAction="#handleSave"
                      style="-fx-background-color: #d97706;
                             -fx-text-fill: white;
                             -fx-min-height: 36;"/>

              <Button fx:id="clearButton" text="Clear"
                      onAction="#handleClear"
                      style="-fx-background-color: #6b7280;
                             -fx-text-fill: white;
                             -fx-min-height: 36;"/>

              <ChoiceBox fx:id="methodChoiceBox"
                         style="-fx-background-color: #e5e7eb;
                                -fx-min-height: 36;
                                -fx-pref-height: 36;
                                -fx-padding: 0 12;
                                -fx-pref-width: 120;"/>
          </HBox>

            <!-- Input area -->
            <VBox spacing="6">
                <Label text="Input Content"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TextArea fx:id="inputTextArea"
                          prefHeight="230"
                          wrapText="false"
                          promptText="Paste or load XML / JSON content here..."
                          style="-fx-font-family: Consolas; -fx-font-size: 12px;
                                 -fx-border-color: #cbd5e1; -fx-background-color: white;"/>
            </VBox>

            <!-- Output area -->
            <VBox spacing="6">
                <Label text="Conversion Result"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TextArea fx:id="outputTextArea"
                          prefHeight="230"
                          wrapText="false"
                          editable="false"
                          promptText="Conversion output will appear here..."
                          style="-fx-font-family: Consolas; -fx-font-size: 12px;
                                 -fx-border-color: #10b981; -fx-background-color: #f0fdf4;"/>
            </VBox>

        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #1f2933; -fx-padding: 8;">
            <Label text="Java Project – XML / JSON Converter - made by : Med BEN AKKA OUAYAD"
                   textFill="#e5e7eb"
                   style="-fx-font-size: 11px;"/>
        </HBox>
    </bottom>

</BorderPane>